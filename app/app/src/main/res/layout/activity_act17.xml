<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main1"
    android:orientation="vertical"
    tools:context=".ACT17Activity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_background_gradient"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_action_back" />
    </LinearLayout>

    <!-- Image Upload -->
    <ImageView
        android:id="@+id/ivUpload"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:src="@drawable/upload" />

    <!-- Form Section -->
    <EditText
        android:id="@+id/edtImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Image URL" />

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_lightgreen_button"
        android:padding="16dp"
        >

        <!-- Row: Tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textSize="20dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edtFoodName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:inputType="text"
                android:background="@drawable/editext"
                android:hint="Tên món ăn" />
        </LinearLayout>

        <!-- Row: Loại Món -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Loại Món:"
                android:textSize="20dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="0dp"
                android:background="@drawable/editext"
                android:layout_height="50dp"
                android:layout_weight="2" />
        </LinearLayout>

        <!-- Row: Giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Giá:"
                android:textSize="20dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edtFoodPrice"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/editext"
                android:hint="Giá món ăn"
                android:layout_weight="2"
                android:inputType="number" />
        </LinearLayout>

        <!-- Row: Cantin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="Cantin:"
                android:textSize="20dp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spCantin"
                android:layout_width="0dp"
                android:background="@drawable/editext"
                android:layout_height="50dp"
                android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Add" />
</LinearLayout>
